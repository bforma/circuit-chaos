{
  "name": "circuit-chaos",
  "version": "0.1.0",
  "private": true,
  "description": "A robot programming board game",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev -w @circuit-chaos/client",
    "dev:server": "npm run dev -w @circuit-chaos/server",
    "build": "npm run build -w @circuit-chaos/shared && npm run build -w @circuit-chaos/client && npm run build -w @circuit-chaos/server",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
